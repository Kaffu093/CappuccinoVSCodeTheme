{
	"env": {
		"es2021": true
	},
	"plugins": ["json"],
	"extends": ["eslint:recommended", "plugin:json/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["warn", "tab"],
		"linebreak-style": ["warn", "windows"],
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"]
	}
}
